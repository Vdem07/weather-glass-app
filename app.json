{
  "expo": {
    "name": "Погода",
    "slug": "WeatherGlassApp",
    "version": "1.2.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "dark": {
        "image": "./assets/splash-icon-dark.png",
        "resizeMode": "contain",
        "backgroundColor": "#1e1e1e"
      }
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UILaunchStoryboardName": "SplashScreen"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.vadim23dem.weatherapp",
      "usesCleartextTraffic": true,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff",
        "dark": {
          "image": "./assets/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#1e1e1e"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "d93bb5b4-2726-4c6a-a998-9d6baa7d0290"
      }
    },
    "owner": "vadim23dem",
    "plugins": [
      "expo-splash-screen",
      [
        "react-native-android-widget",
        {
          "fonts": [],
          "widgets": [
            {
              "name": "AdaptiveWeather",
              "label": "Погода: Адаптивный",
              "minWidth": "80dp",
              "minHeight": "80dp",
              "targetCellWidth": 2,
              "targetCellHeight": 1,
              "resizeMode": "horizontal|vertical",
              "minResizeWidth": "80dp",
              "minResizeHeight": "80dp",
              "maxResizeWidth": "420dp",
              "maxResizeHeight": "400dp",
              "description": "Адаптивный виджет погоды, который изменяется в зависимости от размера",
              "previewImage": "./assets/widget-preview/adaptive-weather.png",
              "updatePeriodMillis": 1800000,
              "widgetFeatures": "reconfigurable",
              "widgetCategory": "home_screen",
              "initialLayout": "adaptive_weather_layout"
            }
          ]
        }
      ]
    ]
  }
}