{
  "expo": {
    "name": "Погода",
    "slug": "WeatherGlassApp",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "dark": {
        "image": "./assets/splash-icon-dark.png",
        "resizeMode": "contain",
        "backgroundColor": "#1e1e1e"
      }
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UILaunchStoryboardName": "SplashScreen"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.vadim23dem.weatherapp",
      "usesCleartextTraffic": true,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff",
        "dark": {
          "image": "./assets/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#1e1e1e"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "d93bb5b4-2726-4c6a-a998-9d6baa7d0290"
      }
    },
    "owner": "vadim23dem",
    "plugins": [
      "expo-splash-screen",
      [
        "react-native-android-widget",
        {
          "fonts": [],
          "widgets": [
            {
              "name": "SmallWeather",
              "label": "Погода: Компактный",
              "minWidth": "128dp",
              "minHeight": "60dp",
              "targetCellWidth": 2,
              "targetCellHeight": 1,
              "description": "Компактный виджет с текущей погодой",
              "previewImage": "./assets/widget-preview/small-weather.png",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "MediumWeather",
              "label": "Погода: Средний",
              "minWidth": "256dp",
              "minHeight": "120dp",
              "targetCellWidth": 4,
              "targetCellHeight": 2,
              "description": "Средний виджет с прогнозом на 3 дня",
              "previewImage": "./assets/widget-preview/medium-weather.png",
              "updatePeriodMillis": 1800000
            },
            {
              "name": "LargeWeather",
              "label": "Погода: Большой",
              "minWidth": "256dp",
              "minHeight": "180dp",
              "targetCellWidth": 4,
              "targetCellHeight": 3,
              "description": "Большой виджет с прогнозом на 3 дня и детальными показателями",
              "previewImage": "./assets/widget-preview/large-weather.png",
              "updatePeriodMillis": 1800000
            }
          ]
        }
      ]
    ]
  }
}